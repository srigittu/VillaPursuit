<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "hibernate-configuration-3.0.dtd">
		
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost/VillaPursuit</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">root</property>
		<property name="hibernate.show_sql">true</property>
		<property name="hibernate.hbm2ddl.auto">validate</property>
		<property name="hbm2ddl.auto">update</property>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
		<mapping class="com.i2i.villapursuit.model.User"/>
		<mapping class="com.i2i.villapursuit.model.Address"/>
		<mapping class="com.i2i.villapursuit.model.Advertisement"/>
		<mapping class="com.i2i.villapursuit.model.Facility"/>
		<mapping class="com.i2i.villapursuit.model.Image"/>
		<mapping class="com.i2i.villapursuit.model.Review"/>
	</session-factory>
</hibernate-configuration>
